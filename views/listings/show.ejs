<%- layout("/layouts/boilerplate") %>



<style>
   /* General Styles */


h3 {
    text-align: center;
    font-size: 2rem; /* Slightly larger for better emphasis */
    font-weight: 700; /* Stronger bold */
    color: #e14141; /* Eye-catching red color */
    margin-bottom: 20px;
    margin-top: -5px;
    letter-spacing: 1px; /* Adds spacing between letters for readability */
    text-transform: uppercase; /* Makes the text stand out more */
    background-image: linear-gradient(90deg, #e14141 0%, #ff7f7f 100%); /* Gradient effect in text */
    background-clip: text;
    -webkit-background-clip: text; /* For Webkit browsers (Chrome, Safari) */
    color: transparent; /* Make text color transparent to reveal gradient */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); /* Light shadow for depth */
}

/* Complaint Card */
.card {
    background-color: #fff;
    border: none;
    border-radius: 15px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3); /* Soft shadow */
    padding: 10px;
}

.listing-card {
    margin-bottom: 10px;
    border: 5px solid #e14141;
}

/* Image Styles */
.show-img {
    height: 33vh;
    width: 80%;
    /* object-fit: cover; */
    border-radius: 12px;
    margin-bottom: 15px;
    margin-left: auto;
    margin-right: auto;
}

/* Card Body Styles */
.card-body ul {
    list-style-type: none;
    padding: 0;
}

.card-body ul li {
    margin-bottom: 10px;
    font-size: 1.1rem;
    color: #495057;
}

.card-body ul li strong {
    color: #e14141; /* Highlighting strong text in red */
}

/* Buttons Section */
.btns {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
}

button {
    padding: 10px 20px;
    background-color: #e14141;
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #d03030;
}

/* Card Wrapper */
.show-card {
    padding-left: 0;
    padding-right: 0;
   margin-bottom: 20px;
}
.custom-card {
    border: 2px solid #e14141;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
    /* background-color: #f9f9f9; */
    width: 100%;
    height: auto;
    margin: 8px;
}

.custom-card:hover {
    box-shadow: 0 6px 12px rgba(225, 65, 65, 0.3);
}

.review-body {
    padding: 5px;
}

.card-title {
    font-size: 1rem;
    font-weight: bold;
    color: #e14141; /* Stylish color for the username */
    display: flex;
    align-items: center;
}

.card-title::before {
    content: '';
    display: inline-block;
    width: 10px;
    height: 10px;
    background-color: #39e141; /* Green circle to indicate online status */
    border-radius: 50%;
    margin-right: 10px;
}

.card-text {
    margin-top: auto !important;
    margin-bottom: auto !important;
    font-size: 1rem;
    color: #555;
    align-items: center;
}
.btn-width {
    max-width: 500px; /* Fix the width of the buttons */
    margin: 5px;  /* Add some spacing between the buttons */
    align-items: center;
  }

.custom-btn {
    background-color: #e14141;
    color: #fff;
    border: none;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.custom-btn:hover {
    background-color: #ff7f7f; /* Lighter shade of the original color */
    color: #000; /* Change text color on hover */
}
</style>
<div class="row show-card">
    <div class="col-8 offset-2">
    </div>
   
<h3><i class="fa-solid fa-newspaper fa-lg" style="background-color: #e62c2c;margin-right: 8px;"></i>COMPLAINT DETAILS</h3>
<div class="row">
    <!-- Complaint Card Section -->
    <div class="card col-md-6 listing-card" id="cardContent">
        <img src="<%=complaint.imageURL.url %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
            <ul>
                <li><strong>Description : </strong><%= complaint.complain %></li>
                <li><strong>Category : </strong><%= complaint.category %></li> 
                <li><strong>Location : </strong><%= complaint.location %></li>
                <li><strong>Severity : </strong><%= complaint.severity %></li>
                <li><strong>Date : </strong><%= complaint.date %></li>
                <li><strong><%= complaint.supportCount %></strong> Expressions of Support</li>
            </ul>
        </div>
        <% if (!complaint.expressusers.includes(currUser.id)) { %>
            <div class="card-footer text-center">
                <form action="/complaints/<%= complaint._id %>/support" method="POST" id="support-form">
                    <button type="submit" class="btn btn-success btn-width">Express Support</button>
                </form>
            </div>
        <% } %>
        <button id="downloadBtn">Download as PDF</button>
    </div>

    <!-- Review Form Section -->
    <div class="col-md-5 offset-1">
        <hr/>
        <button id="downloadBtn">Download as PDF</button>
        <hr/>
        <% if(currUser) { %>
        <h4>Leave a Opinion</h4>
        <form method="POST" action="/complaints/<%=complaint._id%>/reviews" novalidate class="needs-validation">
            <div>
                <label for="comment" class="form-label">Comment:</label>
                <input id="comment" name="review[comment]" placeholder="Enter comment" class="form-control" required />
                <div class="invalid-feedback">Please Submit some Comment</div>
            </div>
            <br/>
            <button type="submit" class="btn custom-btn";><strong>Add Opinion</strong></button>
        </form>
        <hr/>
        <p><b>All opinions</b></p>
        <% } %>
        <% for (review of complaint.reviews) { %>
            <div class="card custom-card">
              <div class="card-body review-body">
                  <p class="card-text"><strong>@<%= review.author.username %> :   </strong> <%= review.comment %></p>
              </div>
          </div> 
         <% } %></div>
    </div>
</div>
<br>

  </div>
</div>  
<script>
    async function incrementSupport(complaintId) {
        try {
            // Send a POST request to update the support count in the backend
            const response = await fetch(`/complaints/${complaintId}/support`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (response.ok) {
                // Update the support count in the UI
                document.getElementById('support-count').innerText = 'Support: ' + data.supportCount;

                // Change the button to grey and disable it
                const button = document.getElementById('support-btn');
                button.classList.remove('btn-success');
                button.classList.add('btn-secondary');
                button.disabled = true;
            } else {
                console.error(data.message);
            }
        } catch (error) {
            console.error('Error updating support:', error);
        }
    }

    document.getElementById('downloadBtn').addEventListener('click', function () {
    // Select the card content by its ID
    var cardContent = document.getElementById('cardContent');

    // Clone the card content to add additional elements for the PDF
    var clonedCardContent = cardContent.cloneNode(true);

    // Create a container div for the entire PDF content (heading, card, footer)
    var pdfContainer = document.createElement('div');
    pdfContainer.style.display = 'flex';
    pdfContainer.style.flexDirection = 'column';
    pdfContainer.style.justifyContent = 'space-between'; // Space between header, content, and footer
    pdfContainer.style.height = '100%'; // Make the container take up the full PDF height

    // Create a heading element for "SafyZone"
    var heading = document.createElement('h1');
    heading.innerText = 'SafyZone';
    heading.style.color = '#e14141';
    heading.style.textAlign = 'center';
    heading.style.margin = '20px 0'; // Add margin to the heading

    // Add the cloned card content (already formatted) into the middle of the container
    clonedCardContent.style.margin = '20px'; // Add margin to ensure space around the card content
    clonedCardContent.style.maxWidth = '100%';
    clonedCardContent.style.boxSizing = 'border-box'; // Ensure padding doesn't affect width

    // Create a footer element for "Verified PDF generated by SafyZone"
    var footer = document.createElement('div');
    footer.innerHTML = '<b><i>@Verified PDF generated by SafyZone</i></b>';
    footer.style.color = '#0000ff'; // Blue color
    footer.style.position = 'absolute';
    footer.style.bottom = '0px'; // Position at the bottom
    footer.style.right = '20px'; // Position on the bottom-right corner
    footer.style.fontSize = '12px';

    // Append the heading, cloned card content, and footer to the PDF container
    pdfContainer.appendChild(heading);  // Top
    pdfContainer.appendChild(clonedCardContent); // Middle
    pdfContainer.appendChild(footer); // Bottom right corner

    clonedCardContent.style.width = '90%';
    clonedCardContent.style.maxWidth = '90%';
    clonedCardContent.style.position = 'relative';

    // Set up the PDF options
    var opt = {
        margin: 0, // No margin to use full PDF length
        filename: 'complaint-card.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: {
            scale: 3, // Higher scale for better quality
            useCORS: true, // Allow cross-origin image loading
            logging: true,
        },
        jsPDF: {
            unit: 'in',
            format: 'letter', // Set the format to US Letter size for full length
            orientation: 'portrait' // Portrait orientation
        }
    };

    // Generate the PDF
    html2pdf().from(pdfContainer).set(opt).save();
});

</script>