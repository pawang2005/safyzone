<%- layout("/layouts/boilerplate") %>

<style>

h3 {
    text-align: center;
    font-size: 2rem;
    font-weight: 700; 
    color: #e14141; 
    margin-bottom: 20px;
    margin-top: -5px;
    letter-spacing: 1px; 
    text-transform: uppercase; 
    background-image: linear-gradient(90deg, #e14141 0%, #ff7f7f 100%);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent; 
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); 
}

.card {
    background-color: #fff;
    border: none;
    border-radius: 15px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3); 
    padding: 10px;
}

.listing-card {
    margin-bottom: 10px;
    border: 5px solid #e14141;
}

.show-img {
    height: 33vh;
    width: 80%;
    border-radius: 12px;
    margin-bottom: 15px;
    margin-left: auto;
    margin-right: auto;
}

.card-body ul {
    list-style-type: none;
    padding: 0;
}

.card-body ul li {
    margin-bottom: 10px;
    font-size: 1.1rem;
    color: #495057;
}

.card-body ul li strong {
    color: #e14141; 
}

.btns {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
}

button {
    padding: 10px 20px;
    background-color: #e14141;
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #d03030;
}

.show-card {
    padding-left: 0;
    padding-right: 0;
   margin-bottom: 20px;
}
.custom-card {
    border: 2px solid #e14141;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
    width: 100%;
    height: auto;
    margin: 8px;
}

.custom-card:hover {
    box-shadow: 0 6px 12px rgba(225, 65, 65, 0.3);
}

.review-body {
    padding: 5px;
}

.card-title {
    font-size: 1rem;
    font-weight: bold;
    color: #e14141; 
    display: flex;
    align-items: center;
}

.card-title::before {
    content: '';
    display: inline-block;
    width: 10px;
    height: 10px;
    background-color: #39e141;
    border-radius: 50%;
    margin-right: 10px;
}

.card-text {
    margin-top: auto !important;
    margin-bottom: auto !important;
    font-size: 1rem;
    color: #555;
    align-items: center;
}
.btn-width {
    max-width: 500px; 
    margin: 5px; 
    align-items: center;
  }

.custom-btn {
    background-color: #e14141;
    color: #fff;
    border: none;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.custom-btn:hover {
    background-color: #ff7f7f; 
    color: #000;
}
</style>
<div class="row show-card">
    <div class="col-8 offset-2">
    </div>
   
<h3><i class="fa-solid fa-newspaper fa-lg" style="background-color: #e62c2c;margin-right: 8px;"></i>COMPLAINT DETAILS</h3>
<div class="row">
    <div class="card col-md-6 listing-card" id="cardContent">
        <img src="<%=complaint.imageURL.url %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
            <ul>
                <li><strong>Description : </strong><%= complaint.complain %></li>
                <li><strong>Category : </strong><%= complaint.category %></li> 
                <li><strong>Location : </strong><%= complaint.location %></li>
                <li><strong>Severity : </strong><%= complaint.severity %></li>
                <li><strong>Date : </strong><%= complaint.date %></li>
                <li><strong><%= complaint.supportCount %></strong> Expressions of Support</li>
            </ul>
        </div>
        <% if (!complaint.expressusers.includes(currUser.id)) { %>
            <div class="card-footer text-center">
                <form action="/complaints/<%= complaint._id %>/support" method="POST" id="support-form">
                    <button type="submit" class="btn btn-success btn-width">Express Support</button>
                </form>
            </div>
        <% } %>
        <button id="downloadBtn">Download as PDF</button>
    </div>

    <div class="col-md-5 offset-1">
        <hr/>
        <button id="downloadBtn">Download as PDF</button>
        <hr/>
        <% if(currUser) { %>
        <h4>Leave a Opinion</h4>
        <form method="POST" action="/complaints/<%=complaint._id%>/reviews" novalidate class="needs-validation">
            <div>
                <label for="comment" class="form-label">Comment:</label>
                <input id="comment" name="review[comment]" placeholder="Enter comment" class="form-control" required />
                <div class="invalid-feedback">Please Submit some Comment</div>
            </div>
            <br/>
            <button type="submit" class="btn custom-btn";><strong>Add Opinion</strong></button>
        </form>
        <hr/>
        <p><b>All opinions</b></p>
        <% } %>
        <% for (review of complaint.reviews) { %>
            <div class="card custom-card">
              <div class="card-body review-body">
                  <p class="card-text"><strong>@<%= review.author.username %> :   </strong> <%= review.comment %></p>
              </div>
          </div> 
         <% } %></div>
    </div>
</div>
<br>

  </div>
</div>  
<script>
    async function incrementSupport(complaintId) {
        try {
            const response = await fetch(`/complaints/${complaintId}/support`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (response.ok) {
                document.getElementById('support-count').innerText = 'Support: ' + data.supportCount;

                const button = document.getElementById('support-btn');
                button.classList.remove('btn-success');
                button.classList.add('btn-secondary');
                button.disabled = true;
            } else {
                console.error(data.message);
            }
        } catch (error) {
            console.error('Error updating support:', error);
        }
    }

    document.getElementById('downloadBtn').addEventListener('click', function () {
    var cardContent = document.getElementById('cardContent');

    var clonedCardContent = cardContent.cloneNode(true);

    var pdfContainer = document.createElement('div');
    pdfContainer.style.display = 'flex';
    pdfContainer.style.flexDirection = 'column';
    pdfContainer.style.justifyContent = 'space-between'; 
    pdfContainer.style.height = '100%';

    var heading = document.createElement('h1');
    heading.innerText = 'SafyZone';
    heading.style.color = '#e14141';
    heading.style.textAlign = 'center';
    heading.style.margin = '20px 0'; 

    clonedCardContent.style.margin = '20px'; 
    clonedCardContent.style.maxWidth = '100%';
    clonedCardContent.style.boxSizing = 'border-box'; 

    var footer = document.createElement('div');
    footer.innerHTML = '<b><i>@Verified PDF generated by SafyZone</i></b>';
    footer.style.color = '#0000ff'; 
    footer.style.position = 'absolute';
    footer.style.bottom = '0px'; 
    footer.style.right = '20px'; 
    footer.style.fontSize = '12px';

    pdfContainer.appendChild(heading);  
    pdfContainer.appendChild(clonedCardContent);
    pdfContainer.appendChild(footer); 

    clonedCardContent.style.width = '90%';
    clonedCardContent.style.maxWidth = '90%';
    clonedCardContent.style.position = 'relative';

    var opt = {
        margin: 0, 
        filename: 'complaint-card.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: {
            scale: 3, 
            useCORS: true,
            logging: true,
        },
        jsPDF: {
            unit: 'in',
            format: 'letter', 
            orientation: 'portrait' 
        }
    };

    html2pdf().from(pdfContainer).set(opt).save();
});

</script>